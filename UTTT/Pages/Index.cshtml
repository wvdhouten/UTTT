@page
<header>
    <h1>Ultimate Tic Tac Toe</h1>
</header>
<div id="game-selector">
    <h3>Open games:</h3>
    <div id="games"></div>
    <button id="new-game-button" type="button">New Game</button>
</div>
<div id="game" class="hidden">
    <header>
        <h2 id="players">Waiting for player...</h2>
    </header>
    <div id="board">
        @{
            for (var a = 0; a < 9; a++)
            {
                <text>
                    <div class="area">
                        @{
                            for (var f = 0; f < 9; f++)
                            {
                                <text>
                                    <div class="field"></div>
                                </text>
                            }
                        }
                    </div>
                </text>
            }
        }

    </div>
</div>

@section Scripts{
    <script src="~/lib/signalr/signalr.js"></script>
    <script src="~/js/game.js"></script>
}